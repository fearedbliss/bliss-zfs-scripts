SCRIPT_NAME="zfs_snapshot"
SCRIPT_PATH="/usr/local/sbin"
SCRIPT="${SCRIPT_PATH}/${SCRIPT_NAME}"

if [ $# -lt 1 ]; then
    echo "Please pass a label for your snapshots."
    exit 1
fi

LABEL="$1"

if [ ! -f "${SCRIPT}" ]; then
    echo "The snapshot tool doesn't exist at: ${SCRIPT}. Aborting."
    exit 1
fi

# Takes a controlled snapshot of only the datasets we are interested in.
"${SCRIPT}" "${LABEL}" \
    tank \
    tank/os \
    tank/home
